@import 'variables.styl'

body
    background-color: $bg-1
    background-image: url(../images/messi.png)
    background-size: auto 100%
    background-repeat: no-repeat
    line-height: 1.5
    font-size: 18px
    font-weight: 300

.logo
    display: flex
    align-items: center
    justify-content: center
    color: #fff
    font-weight: 500
    i
        display: block
        background-image: url(../images/swapsy-logo/logo.svg)
        background-repeat: no-repeat
        background-size: cover
        width: 80px
        height: 80px

.hero
    min-height: 100%
    padding-top: 200px
    position: relative
    &:before
        display: block
        content: ''
        position: absolute
        bottom: 0
        left: 0
        height: 200px
        width: 100%
        background: linear-gradient(rgba(0,0,0,0),$bg-1)

.info
    padding-bottom: ($spacing)

.center
    display: flex
    align-items: center
    justify-content: center
    flex-direction: column

html /deep/ #logo
    position: relative
    top: 6px

.text-centered
    text-align: center

.tagline
    text-align: center
    margin-bottom: $spacing*2 !important
    font-weight: 100
    color: rgba(255,255,255,0.5) !important
    strong
        color: #fff

.actions
    display: flex
    aling-items: center
    :first-child
        margin-right: 12px !important

h2
    font-size: 24px
    font-weight: 100 !important

h1
h2
h3
h4
    color: #fff !important
    margin-bottom: ($spacing/2) !important

p
    margin-bottom: $spacing
    + p
        margin-top: -($spacing/2)

swapsy-logo
    margin-bottom: $spacing
    font-size: 62px

.landing
    position: relative

.landing:before
    position: absolute
    bottom: -200px
    left: 0
    width: 100%
    height: 200px
    background: linear-gradient(rgba(0,0,0,0), $bg-1)
    display: block
    content: ''

.container
    max-width: 600px
    width: 100%
    margin: 0 auto
    position: relative
    z-index: 100

.content
    margin-top: -120px

core-icon[icon="arrow-drop-down-circle"]
    color: #fff
    text-shadow: 0 1px 1px rgba(0,0,0,0.4)
    width: 42px
    height: 42px
    bottom: 24px
    left: 50%
    margin-left: -21px
    position: absolute
    animation: pulse 0.8s ease infinite

.nav
    position: fixed
    right: 48px
    height: 200px
    margin-top: -100px
    top: 50%
    z-index: 100

.nav i
    width: 16px
    height: 16px
    border-radius: 50%
    border: 1px solid rgba(255,255,255,0.6)
    transition: all 0.25s ease
    display: block
    margin-bottom: 12px
    cursor: pointer
    &:hover
        border-color: #fff

.nav .active
    background-color: #fff

.section-title
    font-size: 48px

.section-sub
    font-size: 18px

.section__content
    width: 100%
    max-width: 620px

.signup-title
    font-size: 32px !important
    margin-bottom: $spacing !important
    text-align: center

#form-wrap
    background-color: rgba(0,0,0,0.1)
    min-height: 100vh
    display: flex
    align-items: center
    justify-content: center

.title
    font-size: 32px !important

.ss
    margin: ($spacing*2) 0
    height: 200px
    background-size: cover
    position: relative
    background-repeat: no-repeat
    &:before
        display: block
        content: ''
        position: absolute
        bottom: 0
        left: 0
        width: 100%
        height: 100px
        background: linear-gradient(rgba(0,0,0,0), $bg-1)

.ss--collection
    background-image: url(../images/landing-collection.png)

.ss--collections
    background-image: url(../images/landing-collections.png)

.ss--score
    background-image: url(../images/landing-score.png)
    background-size: 100%
    background-position: center

.ss--swap
    background-image: url(../images/landing-swap.png)
